<!-- Config file for the game -->

<config>
  <app framerate_cap="60">
    <title>Particle System</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="768" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>
  
  <particlesystem>
	<emitter type ="fire">
        <angleRange min ="80" max ="110"/>
        <maxSpeed value ="100"/>
        <maxSize value ="120"/>
        <emitNumber value ="1"/>
        <emitVariance value ="0"/>
        <maxParticleLife value ="200"/>
        <textureRect x="0" y="0" w="128" h="128"/>
        <startColor r ="255" g="100" b="0" a="255"/>
        <endColor r ="210" g="210" b="210" a ="255"/>
        <blendMode mode ="add"/>
        <lifetime value ="-1"/>
      </emitter>
      
      <emitter type ="fire2">
        <angleRange min ="80" max ="110"/>
        <maxSpeed value ="100"/>
        <maxSize value ="120"/>
        <emitNumber value ="1"/>
        <emitVariance value ="0"/>
        <maxParticleLife value ="400"/>
        <textureRect x="0" y="0" w="128" h="128"/>
        <startColor r ="255" g="100" b="0" a="255"/>
        <endColor r ="255" g="100" b="0" a="255"/>
        <blendMode mode ="add"/>
        <lifetime value ="-1"/>
      </emitter>

      <emitter type ="fire3">
        <angleRange min ="80" max ="110"/>
        <maxSpeed value ="100"/>
        <maxSize value ="120"/>
        <emitNumber value ="1"/>
        <emitVariance value ="0"/>
        <maxParticleLife value ="400"/>
        <textureRect x="0" y="0" w="128" h="128"/>
        <startColor r ="158" g="248" b="45" a="255"/>
        <endColor r ="192" g="67" b="252" a="255"/>
        <blendMode mode ="add"/>
        <lifetime value ="-1"/>
      </emitter>
  </particlesystem>

</config>